<h1>New idea</h1>

<% form_for(@idea) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
  <%= f.label :body %> (uses <a href="http://www.textism.com/tools/textile/">textile</a>)<br>
    <%= f.text_area :body %>
    </p>
   <p>
   <% @tags = Tag.find(:all, :order => :name) %>
   <%= select :idea, :tags, @tags.collect { |tag| [tag.name, tag.id] },{},{ :multiple => true } %>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', ideas_path %>
