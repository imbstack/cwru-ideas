<h2>Editing idea</h2>
<% form_for(@idea) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
    <% @categories = Category.find(:all, :order => :name) %>
    <%= f.collection_select :category_id, @categories, :id, :name %>
    </p>
      <%= f.submit 'Update' %>
<% end %>

<%= link_to 'Show', @idea %> |
<%= link_to 'Back', ideas_path %>
