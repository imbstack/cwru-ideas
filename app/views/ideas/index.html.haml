#container
  #header
    %h1 Listing ideas
  #sidebar
    %strong This is on the side
    %li= link_to 'Home', root_path
    %li= link_to 'Ideas', ideas_path
  #content
    %table
      %tr
        %th Title 
        %th Author
        %th Body
        %th Upvotes
        %th Downvotes
      - @ideas.each do |idea|
        %tr
          %td= h idea.title
          %td= h idea.author
          %td= h idea.body
          %td= h idea.upvotes
          %td= h idea.downvotes
          %td= render :partial => 'vote', :locals => {:idea => idea}
          %td= link_to 'Show', idea
          %td= link_to 'Edit', edit_idea_path(idea)
          %td= link_to 'Destroy', idea, :confirm => 'Are you sure?', :method => :delete

    %strong= link_to 'New idea', new_idea_path 
  #footer
    %strong footer is here
