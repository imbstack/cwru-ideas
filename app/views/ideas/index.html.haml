%h2 Listing ideas
%table
  %tr
    %th Title 
    %th Author
    %th Body
    %th Upvotes
    %th Downvotes
    - @ideas.each do |idea|
      %tr
        %td= h idea.title
        %td= h idea.get_creator_name
        %td= h idea.body
        %td= h idea.upvotes
        %td= h idea.downvotes
        %td= render :partial => 'vote', :locals => {:idea => idea}
        %td= link_to 'Show', idea

%strong= link_to 'New idea', new_idea_path 
