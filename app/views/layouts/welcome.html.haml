      .breadcrumbC
        %h2
          %strong
            Case Western Top Ideas
      .sideLink
        &raquo;
        = link_to 'Extra link goes here', '#'
  #contentWrapper
    #contentContainer
      #leftCol
        .blankH
          = image_tag 'blank.jpg', :width => 10, :height => 180, :alt => "frame image"
        .blankH
          = image_tag 'blank.jpg', :width => 180, :height => 10, :alt => "frame image"
